<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_parent_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_grey"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/title_bar"/>


    <EditText
        android:id="@+id/login_password"
        style="@style/BaseTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headbar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:drawablePadding="15dp"
        android:gravity="left"
        android:hint="输入登录密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:maxLength="20"
        android:paddingLeft="15dp"
        android:textColor="@color/color_text"
        android:textColorHint="@color/color_text_hint"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/login_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dividingline_bai"/>

    <EditText
        android:id="@+id/transaction_phone_code"
        style="@style/BaseTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/transaction_code"
        android:background="@null"
        android:drawablePadding="15dp"
        android:gravity="left"
        android:hint="输入手机验证码"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="4"
        android:paddingLeft="15dp"
        android:textColor="@color/color_text"
        android:textColorHint="@color/color_text_hint"/>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/login_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dividingline_bai"/>

    <RelativeLayout
        android:id="@+id/transaction_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/transaction_phone_code"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/login_password"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/get_vertify_code"
            style="@style/BaseTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/select_login"
            android:ems="6"
            android:lines="1"
            android:maxLength="6"
            android:text="获取验证码"
            android:textColor="@color/color_btn"/>
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/transaction_code"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/transaction_code"
        android:background="@drawable/dividingline_bai"/>

    <EditText
        android:id="@+id/transaction_password"
        style="@style/BaseTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@null"
        android:drawablePadding="15dp"
        android:gravity="left"
        android:hint="输入交易密码"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:textColor="@color/color_text"
        android:textColorHint="@color/color_text_hint"
        android:layout_below="@+id/line3"
        android:layout_alignLeft="@+id/line4"/>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/transaction_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dividingline_bai"/>

    <EditText
        android:id="@+id/transaction_password_again"
        style="@style/BaseTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:drawablePadding="15dp"
        android:imeOptions="actionDone"
        android:gravity="left"
        android:hint="确认交易密码"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:singleLine="true"
        android:paddingLeft="15dp"
        android:textColor="@color/color_text"
        android:textColorHint="@color/color_text_hint"
        android:layout_below="@+id/line4"
        android:layout_alignLeft="@+id/line5"/>

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/transaction_password_again"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dividingline_bai"/>

    <Button
        android:id="@+id/transation_commit"
        style="@style/BaseTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction_password_again"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/select_login"
        android:lines="1"
        android:text="提交"
        android:textColor="@color/color_btn"/>
</RelativeLayout>
