<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shape_search_list_rl"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:background="@drawable/shape_search_list_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/search_img"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/square_seize" />

    <TextView
        android:id="@+id/search_detail"
        style="@style/BaseTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_img"
        android:ellipsize="end"
        android:gravity="left"
        android:lines="2"
        android:paddingLeft="5dp"
        android:text="首牛多功能充电器首牛多功能充电器首牛多功能充电首牛多功能充电器首牛多功能充电器首牛多功能充电"
        android:textColor="#595e66"
        android:textSize="13.4sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_detail">

        <TextView
            android:id="@+id/price"
            style="@style/BaseTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:text="¥298.00"
            android:textColor="#e77817"
            android:textSize="13.4sp" />

        <TextView
            android:id="@+id/old_prices"
            style="@style/BaseTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/price"
            android:letterSpacing="0.03"
            android:text="原价489"
            android:textColor="#9f9f9f"
            android:textSize="11.5sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/collect_parentll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="#99000000"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/delete_collect"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawablePadding="-10dp"
            android:drawableTop="@drawable/trash_favorites"
            android:gravity="center"
            android:padding="20dp"
            android:text="删除"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/cancel_collect"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawablePadding="-10dp"
            android:drawableTop="@drawable/cancel_favorites"
            android:gravity="center"
            android:padding="20dp"
            android:text="取消"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>