<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/again_talk_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/add_talk_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_evaluate" />

    <LinearLayout
        android:id="@+id/history_talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/add_talk_img"
        android:orientation="vertical">

        <TextView
            style="@style/BaseTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:id="@+id/history_talk_time_tv"
            android:text="7月7号" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8.6sp"
            android:id="@+id/history_talk_tv"
            android:text="很愉快的经济高科技股化工等科技股化工等可更换"
            android:textColor="#4d4d4d" />

        <com.shownew.home.utils.widget.WordWrapLayoutiml
            android:id="@+id/show_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />


    </LinearLayout>

    <com.wp.baselib.widget.ContainsEmojiEditText
        android:id="@+id/again_talk_content"
        style="@style/BaseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_talk"
        android:background="@null"
        android:gravity="top|left"
        android:hint="宝贝怎么样,还满意吗?"
        android:lines="3"
        android:paddingTop="5dp"
        android:textColor="#aeb1b5"
        android:textSize="13sp" />

    <com.shownew.home.utils.widget.WordWrapLayoutiml
        android:id="@+id/again_select_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/again_talk_content"
        android:padding="10dp" />
</RelativeLayout>