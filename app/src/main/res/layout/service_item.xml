<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="10dp">

    <com.wp.baselib.widget.CustomShapeImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/service_recyclerview_item_height"
        android:scaleType="centerCrop"
        android:src="@drawable/sevice_runseize"
        app:borderColor="@android:color/holo_red_dark"
        app:imageBorderWidth="0dp"
        app:leftBottomRadius="10dp"
        app:leftTopRadius="10dp"
        app:onlyDrawBorder="false"
        app:rightBottomRadius="10dp"
        app:rightTopRadius="10dp"
        app:shape="rectangle"
        tools:ignore="NewApi"/>

</FrameLayout>