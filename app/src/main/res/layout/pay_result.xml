<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/parent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/pay_logo"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp"
        android:src="@drawable/pay_logo"/>

    <TextView
        android:id="@+id/pay_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:layout_marginTop="18dp"
        android:drawableLeft="@drawable/lose"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="付款成功!"
        android:textColor="#2a2d33"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/goto_shop"
        android:layout_width="198dp"
        android:layout_height="37dp"
        android:layout_below="@+id/pay_state"
        android:layout_centerHorizontal="true"
        android:background="@drawable/select_back_shop"
        android:gravity="center"
        android:text="回到超市"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/look_odermenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goto_shop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="@null"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="查看订单"
        android:textColor="#e77817"
        android:textSize="20sp"/>
</RelativeLayout>