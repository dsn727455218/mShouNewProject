<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:background="@drawable/shape_white_raduis"
              android:orientation="vertical"
              android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        >

        <com.wp.baselib.widget.CustomShapeImageView
            android:id="@+id/my_car_header_iv"
            android:layout_width="@dimen/dimens_my_car_logo_wh"
            android:layout_height="@dimen/dimens_my_car_logo_wh"
            android:padding="2dp"
            android:src="@drawable/square_seize"
            app:borderColor="#E6EBF2"
            android:scaleType="fitXY"
            app:imageBorderWidth="3dp"
            app:onlyDrawBorder="false"
            app:roundRadius="5dp"
            app:shape="rectangle"/>


        <TextView
            android:id="@+id/my_car_name"
            style="@style/BaseTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_car_header_iv"
            android:gravity="left"
            android:lineSpacingMultiplier="1.4"
            android:maxLines="3"
            android:textColor="#2a2d33"
            android:textSize="18sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#ced2d9"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_line1"
            android:layout_centerVertical="true"
            android:textColor="#595e66"/>

        <TextView
            android:id="@+id/distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/custom_line1"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/paper_plane"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="#3681f1"/>
    </RelativeLayout>
</LinearLayout>