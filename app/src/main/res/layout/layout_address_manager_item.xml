<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/address_line1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ced2d9"/>

    <TextView
        style="@style/BaseTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_line1"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/phone_number_tv"
        android:gravity="left"
        android:text="王大发"
        android:textColor="@color/color_orgin_unselect"/>

    <TextView
        android:id="@+id/phone_number_tv"
        style="@style/BaseTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_line1"
        android:layout_centerHorizontal="true"
        android:text="18888****773"
        android:textColor="@color/color_orgin_unselect"/>

    <TextView
        android:id="@+id/address_tv"
        style="@style/BaseTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left|center_vertical"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="3"
        android:paddingRight="5dp"
        android:text="搜狗地图,出行专家,可靠帮手提供电子地图浏览地点提供电子地图浏览提供电子地图浏览搜"
        android:textColor="#595e66"/>

    <View
        android:id="@+id/address_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/address_tv"
        android:background="#ced2d9"/>

    <RelativeLayout
        android:id="@+id/address_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/set_address_tv"
            style="@style/BaseTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/determine_payment"
            android:drawablePadding="5dp"
            android:text="默认地址"/>

        <TextView
            android:id="@+id/address_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/address_delete_tv"
            android:drawablePadding="5dp"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="编辑"
            android:textColor="@color/select_text_color"/>

        <TextView
            android:id="@+id/address_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="删除"/>
    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/address_rl"
        android:background="#ced2d9"/>

    <Button
        android:id="@+id/add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line4"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_corner_footer"
        android:padding="10dp"
        android:text="新增地址"
        android:textColor="@color/color_btn"
        android:visibility="gone"
        />
</RelativeLayout>