<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/infowindow_bg"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/infowindows_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/infowindows_tv"
        android:gravity="center"
        android:padding="5dp"
        android:src="@drawable/car"/>

    <TextView
        android:id="@+id/infowindows_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/infowindows_img"
        android:background="@null"
        android:gravity="center"
        android:textSize="12sp"
        android:text="fdfdfdfdfdfdfdfd"
        />

    <Button
        android:id="@+id/infowindows_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/infowindows_tv"
        android:background="@null"
        android:gravity="center"
        android:textSize="18sp"
        android:text="导航"/>
</LinearLayout>